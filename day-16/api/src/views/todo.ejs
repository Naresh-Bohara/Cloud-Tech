<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <!-- Link to Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f7f6;
      padding: 20px;
    }

    .table-container {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table-container h1 {
      font-size: 1.8em;
      color: #333;
    }

    table th {
      background-color: black !important;
      color: white !important;
    }

    table tr:hover {
      background-color: #f2f2f2;
    }

    .btn {
      margin-right: 5px;
    }

    .btn-warning {
      background-color: #ffc107;
      color: white;
    }

    .btn-warning:hover {
      background-color: #e0a800;
    }

    .btn-danger {
      background-color: #dc3545;
      color: white;
    }

    .btn-danger:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <!-- Table Section for Showing Todos -->
      <div class="col-md-12">
        <div class="table-container">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Todo List</h1>
            <a href="/api/v1/todos/new" class="btn btn-primary">Add Task</a>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th> <!-- Add Actions column -->
              </tr>
            </thead>
            <tbody>
              <% todos.forEach(todo => { %>
                <tr>
                  <td><%= todo.title %></td>
                  <td><%= todo.description %></td>
                  <td><%= todo.status %></td>
                  <td>
                    <!-- Edit and Delete Buttons -->
                    <a href="/todos/edit/<%= todo._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/todos/delete/<%= todo._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Link to Bootstrap JS and its dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
